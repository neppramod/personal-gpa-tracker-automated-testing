@model PersonalGPATracker.Models.Course

@{
    ViewBag.Title = "Delete course :" + Model.Code;
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Code:
        </dt>

        <dd>
            @Model.Code
        </dd>

        <dt>
            Title:
        </dt>

        <dd>
            @Model.Title
        </dd>

        <dt>
            Credit Hours:
        </dt>

        <dd>
            @Model.CreditHours
        </dd>

        <dt>
            Letter Grade:
        </dt>

        <dd>
            @Model.LetterGrade
        </dd>

    </dl>

    <form method="post" action="/course/deletecourse">
        <div class="form-actions no-color">
            <input type="hidden" name="id" value="@Model.Code"/>
            <input type="submit" value="Delete Course" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", "Home")
        </div>
    </form>
</div>
